<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_logo_image"
            android:layout_width="@dimen/splash_logo_image_size"
            android:layout_height="@dimen/splash_logo_image_size"

            android:contentDescription="@string/gurumemo_logo_image"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_logo_text"
            android:layout_width="@dimen/splash_logo_text_size"
            android:layout_height="@dimen/splash_logo_text_size"
            android:layout_marginTop="-40dp"
            android:contentDescription="@string/gurumemo_logo_text"
            android:src="@drawable/logo_text"
           />

        <ImageView
            android:id="@+id/iv_hot_pepper_credit"
            android:layout_width="@dimen/splash_hot_pepper_credit_width"
            android:layout_height="@dimen/splash_hot_pepper_credit_height"
            android:layout_marginTop="-40dp"
            android:contentDescription="@string/hotpepper_api_credit_logo"
            android:src="@drawable/ic_hot_pepper_credit"
             />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>