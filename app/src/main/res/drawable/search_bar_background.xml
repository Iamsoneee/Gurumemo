<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/offWhiteTransparent30">

    <item>
    <shape>
        <stroke
            android:width="2dp"
            android:color="@color/colorAccent" />
        <corners android:radius="@dimen/fragment_home_search_bar_background_radius" />
        <solid android:color="@color/transparent" />
    </shape>
    </item>

    <item android:id="@android:id/mask">
        <inset android:insetBottom="@dimen/ripple_inset"
            android:insetLeft="@dimen/ripple_inset"
            android:insetRight="@dimen/ripple_inset"
            android:insetTop="@dimen/ripple_inset">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/ripple_radius" />
                <!-- Color doesn't matter -->
                <solid android:color="@android:color/white"/>
            </shape>
        </inset>
    </item>

</ripple>