<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryTransparent30">

    <item>
        <shape>
            <stroke
                android:width="@dimen/search_filter_background_stroke_width"
                android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/search_filter_background_radius" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <inset
            android:insetLeft="@dimen/ripple_inset"
            android:insetTop="@dimen/ripple_inset"
            android:insetRight="@dimen/ripple_inset"
            android:insetBottom="@dimen/ripple_inset">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/ripple_radius" />
                <!-- color doesn't matter -->
                <solid android:color="@android:color/white" />
            </shape>
        </inset>
    </item>

</ripple>